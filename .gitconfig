[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = /home/cpenning/.gitignore.global

[alias]
    st = status
    ci = commit
    br = branch
    co = checkout
    df = diff
    lg = log -p


[user]
    name = Calen Pennington
    email = calen.pennington@gmail.com
[branch]
	autosetupmerge = true
	autosetuprebase = always
